        "format-icons": {
            "active": "ÔÑë",
            "default": "ÔÑë",
            "empty": "ÔÑë"
        },
        "persistent-workspaces": {
            "*": [
                1,
                2,
                3,
                4,
                5
            ]
        }
    },
    "hyprland/window": {
	"format": "{initialTitle}",
	"icon": true,
	"icon-size": 18
    },
