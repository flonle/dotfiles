{
    "layer": "top",
    "position": "top",
    "reload_style_on_change": true,
    "modules-left": [
        "custom/notification",
        "clock",
        "custom/pacman",
        "tray",
        "hyprland/workspaces"
    ],
    "modules-center": [
	"hyprland/window"
    ],
    "modules-right": [
	"cpu",
	"memory",
	"temperature",
	"disk",
	"custom/colorpicker",
        "bluetooth",
        "network",
        "battery"
    ],
    "hyprland/workspaces": {
